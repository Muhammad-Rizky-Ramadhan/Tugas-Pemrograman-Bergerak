<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="YUK ISI BENSIN"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.035"
        android:textSize="80px"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masukkan jumlah beli dalam Rupiah (Rp)"
        android:textSize="13dp"
        android:textStyle="italic"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pertalite"
        android:textSize="25dp"/>
    <EditText
        android:id="@+id/ePertalite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pertamax 92"
        android:textSize="25dp"/>
    <EditText
        android:id="@+id/ePertamax92"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pertamax 98"
        android:textSize="25dp"/>
    <EditText
        android:id="@+id/ePertamax98"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/harga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Keterangan Harga:\n1. Pertalite = Rp 10.000,00/Liter\n2. Pertamax 92 = Rp 12.000,00/Liter\n3. Pertamax 98 = Rp 14.000,00/Liter"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Keterangan tambahan biaya admin: \n1. Pertalite Rp 2500\n2. Pertamax92 Rp 3000\n3. Pertamax98 Rp 3500"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/membership"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dapatkan diskon hingga 5% dengan menjadi anggota membership"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <RadioGroup
        android:id="@+id/radioGroupMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/buttonMember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sudah membership nih"
            android:textStyle="bold"
            android:textSize="13dp"/>

        <RadioButton
            android:id="@+id/buttonBlmMember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Belum ;("
            android:textStyle="bold"
            android:textSize="13dp"/>
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Klik button dibawah untuk hitung semua total harganya"
        android:textSize="15dp"
        android:textStyle="bold|italic"/>

    <Button
        android:id="@+id/Calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hitung"
        />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nanti total harga bayarnya tertera disini"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textStyle="bold"/>

</LinearLayout>